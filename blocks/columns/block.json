{
  "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/block.json",
  "apiVersion": 2,
  "name": "ystdb/columns",
  "title": "カスタムカラム",
  "description": "モバイル・タブレット・PCでカラム数を変更できるカラムブロック",
  "keywords": [
	"column",
	"カラム",
	"col"
  ],
  "attributes": {
	"colPc": {
	  "type": "number",
	  "default": 3
	},
	"colTablet": {
	  "type": "number",
	  "default": 3
	},
	"colMobile": {
	  "type": "number",
	  "default": 1
	},
	"verticalAlignment": {
	  "type": "string"
	},
	"horizonAlignment": {
	  "type": "string"
	},
	"reverse": {
	  "type": "boolean",
	  "default": false
	},
	"removeMargin": {
	  "type": "boolean",
	  "default": false
	}
  },
  "supports": {
	"align": [
	  "wide",
	  "full"
	],
	"className": false
  }
}
