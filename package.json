{
  "name": "ystandard-blocks",
  "version": "0.0.1",
  "description": "yStandard用ブロック追加プラグイン",
  "scripts": {
    "activate:theme": "wp-env run cli 'wp theme activate ystandard'",
    "start:update": "wp-env start --update --xdebug && npm run activate:theme",
    "start": "wp-env start --xdebug",
    "stop": "wp-env stop",
    "lint:js": "wp-scripts lint-js blocks ./src/js --fix",
    "lint:css:src": "wp-scripts lint-style 'src/**/*.scss' --fix",
    "lint:css:blocks": "wp-scripts lint-style 'blocks/**/*.scss' --fix",
    "lint:css": "run-s lint:css:*",
    "lint:php": "composer phpcs",
    "lint": "run-s lint:*",
    "build:css:plugin": "sass src/sass:css --no-source-map && postcss css/*.css -r",
    "build:css": "run-p build:css:*",
    "build:block": "wp-scripts build --config webpack.blocks.config.js",
    "build:icons": "node src/js/script/create-svg-icon-list.js",
    "build:admin": "wp-scripts build --config webpack.admin-menu.config.js && cp -f ./src/js/admin-menu/inline-style/schema.json ./assets/admin-menu",
    "build:app": "wp-scripts build --config webpack.app.config.js",
    "build": "run-s build:*",
    "watch:css:postcss": "postcss temp/css/*.css --dir css -w",
    "watch:css:pulgin": "sass src/sass:temp/css --no-source-map –w",
    "watch:css": "sass src/sass:temp/css --no-source-map –w",
    "watch:block": "wp-scripts start --config webpack.blocks.config.js",
    "watch:admin": "wp-scripts start --config webpack.admin-menu.config.js",
    "watch:app": "wp-scripts start --config webpack.app.config.js",
    "watch": "NODE_ENV=development run-p watch:*",
    "i18n:pot": "wp i18n make-pot --domain=\"ystandard-blocks\" --exclude=\"library\" ./ languages/ystandard-blocks.pot",
    "i18n:po2json:blocks": "po2json languages/ystandard-blocks-ja.po languages/ystandard-blocks-ja-ystandard-blocks-editor.json -f jed -p",
    "clean:temp": "rimraf temp",
    "clean:upload": "rimraf upload & rimraf /ystandard-blocks",
    "clean:css": "rimraf css",
    "clean:js": "rimraf js",
    "clean:zip": "rimraf ystandard-blocks.zip",
    "clean": "run-p clean:*",
    "zip:copy": "rsync -a --exclude='.*' --exclude='/node_modules' --exclude='/vendor' --exclude='/bin' --exclude='/upload' --exclude='/composer.*' --exclude='*.config.js' --exclude='*.config.json' --exclude='*.xml.dist' --exclude='/tests' --exclude='/src' --exclude='package*.json' --exclude='ystandard-blocks*.json' . ystandard-blocks",
    "zip:archive": "zip -9 -qmr ystandard-blocks.zip ystandard-blocks",
    "zip": "run-s clean:upload clean:zip zip:copy zip:archive",
	"mkdir:upload": "mkdir upload",
	"copy:json:production": "cp ystandard-blocks.json upload/ystandard-blocks.json",
	"copy:json:develop": "cp ystandard-blocks-beta.json upload/ystandard-blocks.json",
	"copy:theme": "cp ystandard-blocks.zip upload/ystandard-blocks.zip",
	"copy:production": "run-s mkdir:upload copy:json:production copy:theme",
	"copy:develop": "run-s mkdir:upload copy:json:develop copy:theme",
    "update:wp-scripts-packages": "wp-scripts packages-update",
    "update": "run-p update:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yosiakatsuki/ystandard-blocks.git"
  },
  "author": "",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/yosiakatsuki/ystandard-blocks/issues"
  },
  "homepage": "https://github.com/yosiakatsuki/ystandard-blocks#readme",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@wordpress/browserslist-config": "^4.1.2",
    "@wordpress/env": "^4.5.0",
    "@wordpress/icons": "^8.2.0",
    "@wordpress/scripts": "^22.4.0",
    "autoprefixer": "^10.4.4",
    "browserslist": "^4.20.2",
    "classnames": "^2.3.1",
    "css-declaration-sorter": "^6.2.2",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "deepmerge": "^4.2.2",
    "eslint": "^8.13.0",
    "eslint-plugin-prettier": "^4.0.0",
    "feather-icons": "^4.29.0",
    "fibers": "^5.0.1",
    "file-loader": "^6.2.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "po2json": "^1.0.0-beta-3",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "prettier": "npm:wp-prettier@2.0.5",
    "react-feather": "^2.0.9",
    "react-toastify": "^8.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.50.1",
    "sass-loader": "^12.6.0",
    "simple-icons": "^6.19.0",
    "style-loader": "^3.3.1"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}
