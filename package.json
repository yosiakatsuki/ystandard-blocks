{
	"name": "ystandard-blocks",
	"version": "0.0.1",
	"description": "yStandard用ブロック追加プラグイン",
	"scripts": {
		"wp-env": "wp-env",
		"wpenv:start:update": "wp-env start --xdebug=debug,develop -- --update",
		"wpenv:start": "wp-env start --xdebug=debug,develop",
		"wpenv:stop": "wp-env stop",
		"wpenv:destroy": "wp-env destroy",
		"lint:blocks:v2": "wp-scripts lint-js ./src/blocks --fix",
		"lint:blocks:v1": "wp-scripts lint-js blocks ./src/js --fix",
		"lint:blocks": "run-s lint:blocks:*",
		"lint:css:src": "wp-scripts lint-style 'src/**/*.scss' --fix",
		"lint:css:blocks": "wp-scripts lint-style 'blocks/**/*.scss' --fix",
		"lint:css": "run-s lint:css:*",
		"lint:php": "composer phpcs",
		"lint": "run-s lint:*",
		"build:css:postcss": "postcss css/**/*.css -r",
		"build:css:sass": "sass src/sass:css blocks:css/blocks --no-source-map",
		"build:css": "run-s build:css:sass build:css:postcss",
		"build:block:v2": "wp-scripts build --webpack-copy-php --webpack-src-dir=src/blocks/block-library --output-path=build/blocks --config webpack.blocks.v2.config.js",
		"build:block:v1": "wp-scripts build --config webpack.blocks.config.js",
		"build:block": "run-s build:block:*",
		"build:icons": "node src/icons/create-svg-icon-list.js",
		"build:admin": "wp-scripts build --config webpack.admin-menu.config.js && cp -f ./src/js/admin-menu/inline-style/schema.json ./assets/admin-menu/inline-style",
		"build:app": "wp-scripts build --config webpack.app.config.js",
		"build": "run-s build:*",
		"watch:css:postcss": "postcss temp/css/**/*.css --base temp/css --dir css --verbose -w",
		"watch:css:sass": "sass src/sass:temp/css ./blocks:temp/css/blocks src/js:temp/css --no-source-map --no-stop-on-error -w",
		"watch:css": "run-p watch:css:*",
		"watch:block:v2:postcss": "postcss build/blocks/**/*.css -r",
		"watch:block:v2:block": "wp-scripts start --webpack-copy-php --webpack-src-dir=src/blocks/block-library --output-path=build/blocks --config webpack.blocks.v2.config.js",
		"watch:block:v2": "run-p watch:block:v2:*",
		"watch:block:v1": "wp-scripts start --config webpack.blocks.config.js",
		"watch:block": "run-p watch:block:*",
		"watch:js:admin": "wp-scripts start --config webpack.admin-menu.config.js",
		"watch:js:app": "wp-scripts start --config webpack.app.config.js",
		"watch:js": "run-p watch:js:*",
		"watch:clean:cache": "rm -rf ./node_modules/.cache",
		"watch": "NODE_ENV=development && npm run watch:clean:cache && run-p watch:*",
		"i18n:pot": "wp i18n make-pot --domain=\"ystandard-blocks\" --exclude=\"library\" ./ languages/ystandard-blocks.pot",
		"i18n:po2json:blocks": "po2json languages/ystandard-blocks-ja.po languages/ystandard-blocks-ja-ystandard-blocks-editor.json -f jed -p",
		"clean:temp": "rimraf temp",
		"clean:upload": "rimraf upload & rimraf ystandard-blocks",
		"clean:css": "rimraf css",
		"clean:js": "rimraf js",
		"clean:zip": "rimraf ystandard-blocks.zip",
		"clean:cache": "rimraf node_modules/.cache",
		"clean": "run-p clean:*",
		"fixtures:clean": "rimraf \\\"tests/integration/fixtures/blocks/*.+(json|serialized.html)\\\"",
		"fixtures:generate": "cross-env GENERATE_MISSING_FIXTURES=y npm run test-unit-block tests/integration/full-content/ && npm run format tests/integration/fixtures/blocks/*.json",
		"fixtures:regenerate": "npm run fixtures:clean && npm run fixtures:generate",
		"fixtures": "npm run fixtures:regenerate tests/integration/full-content/full-content.test.js",
		"test:full-content-block": "npm run build:block && wp-scripts test-unit-js --config tests/unit/jest.config.js tests/integration/full-content/full-content.test.js",
		"test:unit-js": "wp-scripts test-unit-js --config tests/unit/jest.config.js",
		"test:unit-php": "wp-env start && wp-env run tests-cli --env-cwd=wp-content/plugins/ystandard-blocks vendor/bin/phpunit -c phpunit.xml.dist",
		"test:e2e": "wp-scripts test-playwright",
		"test:e2e:debug": "wp-scripts test-playwright --debug",
		"test": "npm run test:unit-js && npm run test:unit-php",
		"zip:copy:base": "rsync -a --exclude='.*' --exclude='/node_modules' --exclude='/vendor' --exclude='/bin' --exclude='/upload' --exclude='/composer.*' --exclude='*.config.js' --exclude='*.config.json' --exclude='*.xml.dist' --exclude='/phpunit' --exclude='/' --exclude='/src' --exclude='package*.json' --exclude='/blocks' --exclude='/temp' --exclude='tsconfig.json' --exclude='./ystandard-blocks*.json' . ystandard-blocks",
		"zip:copy:blocks": "rsync -am --exclude='*.scss' --exclude='*.js' --exclude='tests/' --exclude='deprecated/' ./blocks ystandard-blocks/",
		"zip:archive": "zip -9 -qmr ystandard-blocks.zip ystandard-blocks",
		"zip": "run-s clean:upload clean:zip zip:copy:base zip:copy:blocks zip:archive",
		"mkdir:upload": "mkdir upload",
		"copy:json:production": "cp ystandard-blocks.json upload/ystandard-blocks.json",
		"copy:json:develop": "cp ystandard-blocks-beta.json upload/ystandard-blocks.json",
		"copy:plugin": "cp ystandard-blocks.zip upload/ystandard-blocks.zip",
		"copy:production": "run-s mkdir:upload copy:json:production copy:plugin",
		"copy:develop": "run-s mkdir:upload copy:json:develop copy:plugin",
		"update:wp-scripts-packages": "wp-scripts packages-update",
		"update": "run-p update:*",
		"cli": "wp-env run cli",
		"wp": "wp-env run cli wp",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yosiakatsuki/ystandard-blocks.git"
	},
	"author": "",
	"license": "GPL-2.0+",
	"bugs": {
		"url": "https://github.com/yosiakatsuki/ystandard-blocks/issues"
	},
	"homepage": "https://github.com/yosiakatsuki/ystandard-blocks#readme",
	"devDependencies": {
		"@babel/core": "^7.26.10",
		"@babel/preset-env": "^7.26.9",
		"@types/jest": "^29.5.14",
		"@types/lodash": "^4.17.16",
		"@types/wordpress__block-editor": "^11.5.16",
		"@types/wordpress__blocks": "^12.5.17",
		"@wordpress/browserslist-config": "^6.22.0",
		"@wordpress/env": "^10.22.0",
		"@wordpress/prettier-config": "^4.22.0",
		"@wordpress/scripts": "^30.15.0",
		"autoprefixer": "^10.4.21",
		"babel-plugin-inline-json-import": "^0.3.2",
		"browserslist": "^4.24.4",
		"classnames": "^2.5.1",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"css-declaration-sorter": "^7.2.0",
		"cssnano": "^7.0.6",
		"deepmerge": "^4.3.1",
		"eslint-plugin-tailwindcss": "^3.18.0",
		"fast-glob": "^3.3.3",
		"feather-icons": "^4.29.2",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"po2json": "^1.0.0-beta-3",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.1",
		"prettier": "npm:wp-prettier@^3.0.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"react-feather": "^2.0.10",
		"react-icons": "^5.5.0",
		"react-toastify": "^11.0.5",
		"rimraf": "^6.0.1",
		"sass": "^1.86.3",
		"simple-icons": "^14.12.2",
		"tailwindcss": "^3.4.17"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	]
}
